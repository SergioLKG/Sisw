---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import SearchInput from "../components/SearchInput.astro";
import Li from "../components/Li.astro";
import Console from "../components/Console.astro";
import Categories from "../components/Categories.astro";
import type { Code } from "astro:components";
---

<Layout title="Sisw">
  <main class="w-full min-w-full max-w-full h-full min-h-full">
    <Header />
    <div
      class="h-56 flex gap-4 justify-center max-w-full min-w-fit -mt-10 sm:-mt-52 md:-mt-40 lg:-mt-10"
    >
      <div
        class="md:bg-slate-300 md:shadow-md shadow-neutral-400 h-full max-sm:min-h-[620px] rounded-xl flex self-center pt-12 sm:-mt-24"
      >
        <div
          class="justify-center items-center text-center yrounded-xl w-full mx-3"
        >
          <h3 class="text-center text-lg">
            <b>Category: </b><span id="statCategory">Countries</span>
            <span>&ThickSpace;&ThickSpace;/&ThickSpace;&ThickSpace;</span>
            <b>Last Search: </b><span id="statLastSearch"> None</span>
          </h3>
          <SearchInput />
          <div class="flex sm:items-center sm:justify-center w-full">
            <Categories>
              
            </Categories>
          </div>
          <div class="text-left sm:text-center items-center mt-40">
            <Console />
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
