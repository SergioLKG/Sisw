---
import Li from "./Li.astro";
---

<style>
  @keyframes searching {
    0% {
      opacity: 0;
    }
    50% {
      opacity: 0.5;
    }
    100% {
      opacity: 1;
    }
  }

  .searching-animation {
    animation: searching 1s infinite alternate;
  }

  li {
    min-height: 2.5rem;
    height: 100%;
    padding: 0.5rem;
    padding-left: 1rem;
  }

  li:last-child {
    border-bottom-right-radius: 0.5rem /* 8px */;
    border-bottom-left-radius: 0.5rem /* 8px */;
  }

  li:hover {
    --tw-bg-opacity: 1;
    background-color: rgb(212 212 212 / var(--tw-bg-opacity));
    --tw-text-opacity: 1;
    color: rgb(101 163 13 / var(--tw-text-opacity));
  }
</style>

<div
  class="flex items-center justify-center sm:p-10 sm:pb-2 sm:pt-3 max-w-full min-w-fit"
>
  <div class="flex w-full justify-center p-0 m-0" >
    <div
      class="flex w-10 items-center justify-center rounded-tl-lg rounded-bl-lg bg-white"
    >
      <svg
        viewBox="0 0 20 20"
        aria-hidden="true"
        class="pointer-events-none absolute w-5 fill-slate-400 transition"
      >
        <path
          d="M16.72 17.78a.75.75 0 1 0 1.06-1.06l-1.06 1.06ZM9 14.5A5.5 5.5 0 0 1 3.5 9H2a7 7 0 0 0 7 7v-1.5ZM3.5 9A5.5 5.5 0 0 1 9 3.5V2a7 7 0 0 0-7 7h1.5ZM9 3.5A5.5 5.5 0 0 1 14.5 9H16a7 7 0 0 0-7-7v1.5Zm3.89 10.45 3.83 3.83 1.06-1.06-3.83-3.83-1.06 1.06ZM14.5 9a5.48 5.48 0 0 1-1.61 3.89l1.06 1.06A6.98 6.98 0 0 0 16 9h-1.5Zm-1.61 3.89A5.48 5.48 0 0 1 9 14.5V16a6.98 6.98 0 0 0 4.95-2.05l-1.06-1.06Z"
        ></path>
      </svg>
    </div>
    <input
      type="search"
      class="bg-white pr-5 pl-1 rounded-r-lg w-full max-w-[580px] sm:max-w-[600px] min-h-10 font-semibold text-base text-neutral-600 focus:text-black-08 outline-none"
      placeholder="Search something..."
      id="searcher"
    />
  </div>
</div>
<div class="collapse flex justify-items-center justify-center text-center gap-4">
  <div
    class="absolute text-left -mt-[0.3rem] min-w-[500px] sm:min-w-[525px] sm:-mt-4 md:min-w-[620px] max-w-fit bg-white pt-3 rounded-b-xl">
    <ul id="searchResults" class="shadow-md rounded-b-xl">
      <li></li>
    </ul>
  </div>
</div>
